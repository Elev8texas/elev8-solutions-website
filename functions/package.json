    "nodemailer": "^6.9.3",
    "@sendgrid/mail": "^7.7.0"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/node": "^18.15.0",
    "@types/nodemailer": "^6.4.8"
  },
  "private": true
} 